<% provide(:title, 'Pokemon index') %>
<h1>Pokemon index</h1>

<h3>検索条件</h3>
<div class="row">
  <%= form_tag({controller:"pokemons",action:"index"}, method: :get) do %>
    <div class="col-md-1">
      <label for="type">タイプ：</label>
    </div>
    <div class="col-md-4">
      <%= select_tag("search_type", options_for_select(@type_hash.invert), :selected => -1) %>
    </div>
    <div class="col-md-1">
      <label for="egg">タマゴ：</label>
    </div>
    <div class="col-md-4">
      <%= select_tag("search_egg", options_for_select(@egg_hash.invert), :selected => -1) %>
    </div>
    <div class="col-md-2">
      <%= submit_tag '検索'  %>
    </div>
  <% end %>
</div>

<div id="gray-back">
  <h3>検索結果</h3>
  <div class="row">
    <div class="col-md-1">
      <h6>タイプ：</h6>
    </div>
    <div class="col-md-4">
      <%= @type_hash[@s_t] %>
    </div>
    <div class="col-md-1">
      <h6>タマゴ：</h6>
    </div>
    <div class="col-md-4">
      <%= @egg_hash[@s_e] %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>


