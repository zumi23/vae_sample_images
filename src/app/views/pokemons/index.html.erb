<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">名前</th>
      <th scope="col">タイプ1</th>
      <th scope="col">タイプ2</th>
      <th scope="col">タマゴ1</th>
      <th scope="col">タマゴ2</th>
      <!--
      <th scope="col">たかさ</th>
      <th scope="col">おもさ</th>
      <th scope="col">HP</th>
      <th scope="col">こうげき</th>
      <th scope="col">ぼうぎょ</th>
      <th scope="col">とくこう</th>
      <th scope="col">とくぼう</th>
      <th scope="col">すばやさ</th>
      -->
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <th scope="row"><%= pokemon.name_id %></td>
        <td><%= link_to pokemon.name, pokemon %></td>
        <td><span class="badge badge-pill"><%= @type_hash[pokemon.type1_id] %></span></td>
        <td><span class="badge badge-pill"><%= @type_hash[pokemon.type2_id] %></span></td>
        <td><span class="badge badge-pill"><%= @egg_hash[pokemon.egg1_id] %></span></td>
        <td><span class="badge badge-pill"><%= @egg_hash[pokemon.egg2_id] %></span></td>
        <!--
        <td><%= pokemon.height %></td>
        <td><%= pokemon.weight %></td>
        <td><%= pokemon.h_param %></td>
        <td><%= pokemon.a_param %></td>
        <td><%= pokemon.b_param %></td>
        <td><%= pokemon.c_param %></td>
        <td><%= pokemon.d_param %></td>
        <td><%= pokemon.s_param %></td>
        -->
