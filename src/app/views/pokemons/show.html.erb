<% provide(:title, @pokemon.name) %>
<h1>About</h1>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @img_hash[@pokemon.name_id], size: '300x300' %>
  </div>

  <div class="col-md-4">
    <table class="table table-striped table-hover">
      <tr>
        <th scope="col">ID</th>
        <td><%= @pokemon.name_id %></td>
      </tr>
      <tr>
        <th scope="col">名前</th>
        <td><%= @pokemon.name %></td>
      </tr>
      <tr>
        <th scope="col">タイプ1</th>
        <td><%= @type_hash[@pokemon.type1_id] %></td>
      </tr>
      <tr>
        <th scope="col">タイプ2</th>
        <td><%= @type_hash[@pokemon.type2_id] %></td>
      </tr>
      <tr>
        <th scope="col">タマゴ1</th>
        <td><%= @egg_hash[@pokemon.egg1_id] %></td>
      </tr>
      <tr>
        <th scope="col">タマゴ2</th>
        <td><%= @egg_hash[@pokemon.egg2_id] %></td>
      </tr>
      <tr>
        <th scope="col">たかさ</th>
        <td><%= @pokemon.height %></td>
      </tr>
      <tr>
        <th scope="col">おもさ</th>
        <td><%= @pokemon.weight %></td>
      </tr>
    </table>
  </div>

  <div class="col-md-4">
    <table class="table table-striped table-hover">
      <tr>
        <th scope="col">HP</th>
        <td><%= @pokemon.h_param %></td>
      </tr>
      <tr>
        <th scope="col">こうげき</th>
        <td><%= @pokemon.a_param %></td>
      </tr>
      <tr>
        <th scope="col">ぼうぎょ</th>
        <td><%= @pokemon.b_param %></td>
      </tr>
      <tr>
        <th scope="col">とくこう</th>
        <td><%= @pokemon.c_param %></td>
      </tr>
      <tr>
        <th scope="col">とくぼう</th>
        <td><%= @pokemon.d_param %></td>
      </tr>
      <tr>
        <th scope="col">すばやさ</th>
        <td><%= @pokemon.s_param %></td>
      </tr>
    </table>
  </div>
</div>
